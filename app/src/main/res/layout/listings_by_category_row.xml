<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="#00000000">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/featureImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_home" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lokacija"
                android:drawableLeft="@drawable/ic_location_grey_new"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/featureImage"
                app:layout_constraintHorizontal_bias="0.044"
                app:layout_constraintStart_toStartOf="@+id/featureImage"
                app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@drawable/ic_calendar"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:background="#80737373"
                android:textColor="@color/white"
                android:padding="3dp"
                android:text="Datum objave"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/featureImage"
                app:layout_constraintTop_toTopOf="@+id/featureImage" />

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/open_sans"
                android:drawableRight="@drawable/ic_euro"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="#80737373"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:text="Cijena"
                app:layout_constraintBottom_toBottomOf="@+id/featureImage"
                app:layout_constraintStart_toStartOf="@+id/featureImage" />

            <TextView
                android:id="@+id/statusViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#80737373"
                android:fontFamily="@font/open_sans"
                android:padding="10dp"
                android:text="Status"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/featureImage"
                app:layout_constraintTop_toTopOf="@+id/featureImage" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/open_sans"
                android:text="Naziv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/featureImage" />

            <TextView
                android:id="@+id/numRoomTextVIew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#80737373"
                android:drawableLeft="@drawable/ic_num_room"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="Broj soba"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/featureImage"
                app:layout_constraintEnd_toEndOf="@+id/featureImage" />
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

</RelativeLayout>